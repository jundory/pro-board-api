<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.board_api.login.mapper.UserMapper">
<select id="checkUserByEmail" resultType="userDTO">
    SELECT *
    FROM USER
    WHERE email = #{email}
</select>

    <insert id="registerUserInfo">
        INSERT INTO user ("user_id", "user_name", "login_id", "password", "email", "created_at")
        VALUES (${userId},${userName},${loginId},${password},${email},SYSDATE())
    </insert>
</mapper>